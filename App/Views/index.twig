<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />

    <link rel="shortcut icon" href="/public/images/favicon.ico" type="image/x-icon">

    <link href="/public/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="/public/css/bootstrap-responsive.css" rel="stylesheet" type="text/css">
    <link href="/public/css/main.css" rel="stylesheet" type="text/css">

    {% block CSS %}
    {% endblock %}

    {% block HEAD_JS %}
    {% endblock %}

    <title>{% block title %} {% endblock %}</title>
</head>
<body>

<div class="container-fluid">

    <div class="row-fluid">
        {% include "menu/main_menu.twig" %}
    </div>

    {% block content %}

        <div class="row-fluid">
            {% block search_form %}
                <div class="span3">
                    {% block search_form_content %}
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
        <div class="row-fluid">
            {% block main %}
                <div id="main_content">
                    {% block main_content %} {% endblock %}
                </div>
            {% endblock %}
        </div>

    {% endblock content %}
</div>

<script data-main="scripts/main" src="/public/js/jquery-2.1.3.js"></script>
<script data-main="scripts/main" src="/public/js/bootstrap.js"></script>
<script data-main="scripts/main" src="/public/js/main.js"></script>


</body>

<div class="container-fluid"><div class="row-fluid" style="min-height: 200px"></div></div>

{% include "tasks/preview.twig" %}

</html>